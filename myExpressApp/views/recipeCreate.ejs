        <!-- Recipe form -->
        <form onsubmit="return false;" method="post" name="recipe">
            <div class="textareas">
                <!-- Name -->
                <div class="form-group">
                    <label for="name">Recipe Name:</label>
                    <input type="text" class="form-control" id="name" placeholder="We don't like mystery">
                    <label for="name" id="nameResult"></label>
                </div>

                <!-- Summary -->
                <div class="form-group">
                    <label for="summary">Summary:</label>
                    <input type="text" class="form-control" id="summary" placeholder="A short sentence to describe your recipe">
                    <label for="summary" id="summaryResult"></label>
                </div>

                <!-- Serving Size -->
                <div class="form-group">
                    <label for="servingSize">Serving size:</label>
                    <select name="servingSize" id="servingSize">
                        <option value="0">1</option>
                        <option value="1">2</option>
                        <option value="2">3</option>
                        <option value="3">4</option>
                        <option value="4">5</option>
                        <option value="5">6</option>
                        <option value="6">7</option>
                        <option value="7">8</option>
                        <option value="8">9</option>
                        <option value="9">10</option>
                        <option value="10">more than 10</option>
                    </select>
                </div>

                <!-- Time -->
                <div class="form-group">
                    <label for="time">Time:</label>
                    <select name="time" id="time">
                        <option value="0">Less than 5 mins</option>
                        <option value="1">5-10 mins</option>
                        <option value="2">10-20 mins</option>
                        <option value="3">20-30 mins</option>
                        <option value="4">30-40 mins</option>
                        <option value="5">40-50 mins</option>
                        <option value="6">50-60 mins</option>
                        <option value="7">60-90 mins</option>
                        <option value="8">90-120 mins</option>
                        <option value="9">120-180 mins</option>
                        <option value="10">More than 180 mins</option>
                    </select>
                </div>

                <!-- Difficulty -->
                <div class="form-group">
                    <label for="time">Difficulty:</label>
                    <select name="difficulty" id="difficulty">
                        <option value="0">Easy</option>
                        <option value="1">Medium</option>
                        <option value="2">Hard</option>
                    </select>
                </div>

                <!-- Dietary Requirements -->
                <label>Dietary Requirements:</label>
                <ul>
                    <li>
                        <label data-value="vegetarian" tabindex="-1">
                        <input type="checkbox" id="vegetarian" />&nbspVegetarian</label>
                    </li>
                    <li>
                        <label data-value="vegan" tabindex="-1">
                        <input type="checkbox" id="vegan" />&nbspVegan</label>
                    </li>
                    <li>
                        <label data-value="kosher" tabindex="-1">
                        <input type="checkbox" id="kosher" />&nbspKosher</label>
                    </li>
                </ul>

                <!-- Ingredients -->
                <div class="form-group">
                    <table class="table" id="ingredientTable" cellspacing="0" cellpadding="0">
                        <tr>
                            <th>Ingredient</th>
                            <th>Quantity</th>
                            <th>Add</th>
                            <th>Remove</th>
                        </tr>
                        <tr id="entry0">
                            <td><input type="text" class="recipeIngredient" id="ingredientName0" placeholder="e.g Oat/Salt/Pasta"></td>
                            <td><input type="text" class="recipeIngredient" id="ingredientQuantity0" placeholder="e.g 500g/3tbsp"></td>
                            <td><button title="Add Ingredient" class="editRow" id="addIngredient0" onclick="addIngredient(0)"><span style="position: relative; bottom: 3px">
                                <img src="/images/plus.png" style="height: 10px; width: 10px;" alt="add"/>
                            </span></button></td>
                            <td id="removeIngredient0"></td>
                        </tr>
                    </table>
                    <label for="ingredientTable" id="ingredientTableResult"></label>
                </div>

                <!-- Instructions-->
                <div class="form-group">
                    <label for="recipeInstructions">Recipe Instructions:</label>
                    <textarea class="form-control" rows="5" placeholder="Write your recipe here" id="steps"></textarea>
                    <label for="steps" id="stepsResult"></label>
                </div>

                <!-- Reference -->
                <div class="form-group">
                    <label for="recipeRef">Reference:</label>
                    <input type="text" class="form-control" id="recipeRef" placeholder="Please link the recipe that inspired you! (if there was one)">
                    <label for="recipeRef" id="recipeRefResult"></label>
                </div>

                <!-- Submit -->
                <div class="recipeViewPageButtons">
                    <button title="Enter" type="submit" style="border-radius: 50%" onclick="createRecipe()">
                        <span style="position: relative; bottom: 3px">
                            <img src="/images/enter.png" alt="Enter"/>
                        </span>
                    </button>
                </div>
            </div>
        </form>
